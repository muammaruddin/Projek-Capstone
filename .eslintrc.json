{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2], // Aturan indentasi 2 spasi
        "quotes": ["error", "single"], // Menggunakan tanda kutip tunggal
        "semi": ["error", "always"], // Selalu gunakan titik koma di akhir statement
        "no-console": "off",
        "linebreak-style": "off"
    }
}
